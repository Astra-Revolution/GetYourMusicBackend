
option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "GetYourMusic.settings"

  aws:elasticbeanstalk:container:python:
    WSGIPath: "GetYourMusic.wsgi:application"
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: "/api"
    MatcherHTTPCode: "200-499"

  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static/: "archives/static/"

container_commands:
  01_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python GetYourMusic/manage.py collectstatic --noinput"
